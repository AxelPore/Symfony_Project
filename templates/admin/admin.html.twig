{% extends 'base.html.twig' %}

{% block title %}Logs{% endblock %}

{% block body %}

<style>
.mb-4 {
    margin-bottom: 4rem;
    color: white;
    text-align: center;
}
</style>

<div class="video-background">
    <iframe 
        src="https://youtube.com/embed/9OhgHSFAnRM?autoplay=1&mute=1&loop=1&controls=0&showinfo=0&rel=0&playlist=9OhgHSFAnRM&modestbranding=1" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        frameborder="0" 
        allowfullscreen
    ></iframe>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Logs</h1>
            
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Initiator</th>
                                <th>Type</th>
                                <th>Target User</th>
                                <th>Product</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for interaction in interactions %}
                            <tr>
                                <td>{{ interaction.initiator.username }}</td>
                                <td>{{ interaction.interactionType }}</td>
                                <td>{{ interaction.interactionTo ? interaction.interactionTo.username : 'N/A' }}</td>
                                <td>{{ interaction.productConcerned.name }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}
