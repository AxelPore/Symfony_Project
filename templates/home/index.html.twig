{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="mb-4">Bienvenue sur la page d'accueil</h1>
            
            {% if app.user %}
                <p class="mb-4">Vous êtes connecté en tant que : {{ app.user.email }}</p>
                <a href="{{ path('app_profile') }}" class="btn btn-info mr-2">Profil</a>
                <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>

            {% else %}
                <p class="mb-4">Veuillez vous connecter</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
