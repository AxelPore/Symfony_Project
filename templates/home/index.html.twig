{% extends 'base.html.twig' %}

{% block title %}Accueil - Notre E-commerce{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
{% endblock %}

{% block body %}
    {# Hero Section avec Parallax #}
    <section class="hero-section">
        <div class="hero-content" data-aos="fade-up">
            <h1>Bienvenue sur notre boutique</h1>
            <p>Découvrez des produits uniques et exceptionnels</p>
            <div class="hero-buttons">
                <a href="#featured" class="btn btn-primary">Découvrir</a>
                <a href="{{ path('app_products') }}" class="btn btn-outline">Voir tout</a>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </section>

    {# Featured Products avec Animation #}
    <section id="featured" class="featured-products">
        <div class="section-header" data-aos="fade-up">
            <h2>Produits à la une</h2>
            <p>Nos meilleures sélections pour vous</p>
        </div>
        <div class="product-grid">
            {% for product in featured_products %}
                <div class="product-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                    <div class="product-image">
                        <img src="{{ product.imageLink }}" alt="{{ product.name }}">
                        <div class="product-overlay">
                            <div class="product-actions">
                                <a href="{{ path('product_show', {slug: product.slug}) }}" class="btn-view">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn-cart" data-product="{{ product.id }}">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="product-info">
                        <h3>{{ product.name }}</h3>
                        <div class="product-meta">
                            <span class="price">{{ product.price }} €</span>
                            <span class="rating">
                                {% for i in 1..5 %}
                                    <i class="fas fa-star {{ i <= product.rating ? 'active' : '' }}"></i>
                                {% endfor %}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    {# Categories avec Hover Effects #}
    <section class="categories-section" data-aos="fade-up">
        <div class="section-header">
            <h2>Explorez nos catégories</h2>
            <p>Trouvez ce qui vous correspond</p>
        </div>
        <div class="categories-grid">
            {% for category in categories %}
                <div class="category-card" data-aos="zoom-in" data-aos-delay="{{ loop.index * 100 }}">
                    <img src="{{ category.image }}" alt="{{ category.name }}">
                    <div class="category-content">
                        <h3>{{ category.name }}</h3>
                        <p>{{ category.description }}</p>
                        <a href="{{ path('category_show', {slug: category.slug}) }}" class="btn-category">
                            Découvrir
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    {# New Products avec Slider #}
    <section class="new-products-section">
        <div class="section-header" data-aos="fade-up">
            <h2>Dernières nouveautés</h2>
            <p>Ne manquez pas nos derniers arrivages</p>
        </div>
        <div class="new-products-slider" data-aos="fade-up">
            {% for product in new_products %}
                <div class="product-slide">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="{{ product.imageLink }}" alt="{{ product.name }}">
                            <div class="product-badge">Nouveau</div>
                        </div>
                        <div class="product-info">
                            <h3>{{ product.name }}</h3>
                            <p class="price">{{ product.price }} €</p>
                            <a href="{{ path('product_show', {slug: product.slug}) }}" class="btn-product">
                                Découvrir
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
{% endblock %}
