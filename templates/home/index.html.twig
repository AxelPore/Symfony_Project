{% extends 'base.html.twig' %}

{% block title %}Travel E-Shop{% endblock %}

{% block body %}
<style>
          
    .user-menu {
        position: absolute;
        top: 10px;
        right: 10px;
    }
    .user-menu .btn {
        margin-left: 10px;
    }
    .dropdown-menu {
        right: 0;
        left: auto;
    }
    .search-bar{
        border: 2px solid rgb(0, 0, 0);
        border-radius: 40px;
        padding: 10px;
    }
    .btn-outline-success {
        margin-top : 10px;
        color:rgb(253, 1, 1);
        border-color:rgb(7, 0, 38);
    }
    .mb-4 {
        color:rgb(253, 1, 1);
    }
    .card .card-title {
        color:rgb(253, 1, 1);
    }
    .card .card-text {
        color:rgb(253, 1, 1);
    }
    .card {
        background-color:rgb(29, 0, 134);
    }
    .card .card-image-top {
        width: 294.4px;
        height: 165.8px;
    }
    .link .dropdown-item {
        color:rgb(173, 65, 65);
        background-color:rgb(42, 0, 81);
        border: 2px solid rgb(184, 189, 232);
        border-radius: 40px;
        padding: 10px;
        width: 150px;
        margin-top: 10px;
    }
</style>
<div class="video-background">
    <iframe 
        src="https://youtube.com/embed/9OhgHSFAnRM?autoplay=1&mute=1&loop=1&controls=0&showinfo=0&rel=0&playlist=9OhgHSFAnRM&modestbranding=1" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        frameborder="0" 
        allowfullscreen
    ></iframe>
</div>
<div class="container mt-5">
    {% if app.user %}
        <div class="link">
            <a href="{{ path('app_profile') }}" class="dropdown-item">Profil</a>
            <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>
        </div>
    {% else %}
        <div class="link">
            <p class="dropdown-item-text">Veuillez vous connecter</p>
            <a href="{{ path('app_login') }}" class="dropdown-item">Connexion</a>
        </div>
    {% endif %}
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="mb-4">Bienvenue sur notre Travel E-Shop</h1>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Trouvez votre prochaine destination</h2>
            <form class="form-inline justify-content-center">
                <input class="form-control search-bar mr-2" type="search" placeholder="Recherche de destinations" aria-label="Search">
                <a href="{{ path('app_detail')}}" class="btn btn-outline-success" >Rechercher</a>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Destinations populaires</h2>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://c4.wallpaperflare.com/wallpaper/965/883/624/manga-one-piece-wallpaper-preview.jpg" class="card-img-top" alt="Destination 1">
                <div class="card-body">
                    <h5 class="card-title">Destination 1</h5>
                    <p class="card-text">Description de la destination 1.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://w0.peakpx.com/wallpaper/776/134/HD-wallpaper-konoha-house-scenic-naruto-naruto-shippuuden-home-beautiful-mountain-city-multicolor-anime-color-shippuuden-beauty-scenery-ninja-shinobi-town-sky-building-scene-landscape.jpg" class="card-img-top" alt="Destination 2">
                <div class="card-body">
                    <h5 class="card-title">Destination 2</h5>
                    <p class="card-text">Description de la destination 2.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://ancdn.fancaps.net/14684214.jpg" class="card-img-top" alt="Destination 3">
                <div class="card-body">
                    <h5 class="card-title">Destination 3</h5>
                    <p class="card-text">Description de la destination 3.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Promotions de voyage</h2>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://c4.wallpaperflare.com/wallpaper/352/570/570/warhammer-40k-space-marines-spaceships-hd-painting-of-black-castle-with-airships-wallpaper-preview.jpg" class="card-img-top" alt="Promo 1">
                <div class="card-body">
                    <h5 class="card-title">Promo 1</h5>
                    <p class="card-text">Détails de la promotion 1.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://i.pinimg.com/736x/7a/5e/72/7a5e72e46eef38079c9a0494d34b41bb.jpg" class="card-img-top" alt="Promo 2">
                <div class="card-body">
                    <h5 class="card-title">Promo 2</h5>
                    <p class="card-text">Détails de la promotion 2.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://images4.alphacoders.com/865/thumb-1920-865573.png" class="card-img-top" alt="Promo 3">
                <div class="card-body">
                    <h5 class="card-title">Promo 3</h5>
                    <p class="card-text">Détails de la promotion 3.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}