{% extends 'base.html.twig' %}

{% block title %}Travel E-Shop{% endblock %}

{% block body %}
<style>
          
    .user-menu {
        position: absolute;
        top: 10px;
        right: 10px;
    }
    .user-menu .btn {
        margin-left: 10px;
    }
    .dropdown-menu {
        right: 0;
        left: auto;
    }
    .search-bar{
        border: 2px solid rgb(0, 0, 0);
        border-radius: 40px;
        padding: 10px;
    }
    .btn-outline-success {
        margin-top : 10px;
        color:rgb(253, 1, 1);
        border-color:rgb(7, 0, 38);
    }
    .mb-4 {
        color:rgb(253, 1, 1);
    }
    .card .card-title {
        color:rgb(253, 1, 1);
    }
    .card .card-text {
        color:rgb(253, 1, 1);
    }
    .card {
        background-color:rgb(29, 0, 134);
    }
</style>
<div class="video-background">
    <iframe 
        src="https://youtube.com/embed/9OhgHSFAnRM?autoplay=1&mute=1&loop=1&controls=0&showinfo=0&rel=0&playlist=9OhgHSFAnRM&modestbranding=1" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        frameborder="0" 
        allowfullscreen
    ></iframe>
</div>
<div class="container mt-5">
    {% if app.user %}
        <p class="dropdown-item-text">Vous êtes connecté en tant que : {{ app.user.email }}</p>
        <a href="{{ path('app_profile') }}" class="dropdown-item">Profil</a>
        <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>
    {% else %}
        <p class="dropdown-item-text">Veuillez vous connecter</p>
        <a href="{{ path('app_login') }}" class="dropdown-item">Connexion</a>
    {% endif %}
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="mb-4">Bienvenue sur notre Travel E-Shop</h1>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Trouvez votre prochaine destination</h2>
            <form class="form-inline justify-content-center">
                <input class="form-control search-bar mr-2" type="search" placeholder="Recherche de destinations" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Rechercher</button>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Destinations populaires</h2>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/image1.jpg" class="card-img-top" alt="Destination 1">
                <div class="card-body">
                    <h5 class="card-title">Destination 1</h5>
                    <p class="card-text">Description de la destination 1.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/image2.jpg" class="card-img-top" alt="Destination 2">
                <div class="card-body">
                    <h5 class="card-title">Destination 2</h5>
                    <p class="card-text">Description de la destination 2.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/image3.jpg" class="card-img-top" alt="Destination 3">
                <div class="card-body">
                    <h5 class="card-title">Destination 3</h5>
                    <p class="card-text">Description de la destination 3.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">Explorer</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Promotions de voyage</h2>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/promo1.jpg" class="card-img-top" alt="Promo 1">
                <div class="card-body">
                    <h5 class="card-title">Promo 1</h5>
                    <p class="card-text">Détails de la promotion 1.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/promo2.jpg" class="card-img-top" alt="Promo 2">
                <div class="card-body">
                    <h5 class="card-title">Promo 2</h5>
                    <p class="card-text">Détails de la promotion 2.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="path/to/promo3.jpg" class="card-img-top" alt="Promo 3">
                <div class="card-body">
                    <h5 class="card-title">Promo 3</h5>
                    <p class="card-text">Détails de la promotion 3.</p>
                    <a href="{{ path('app_detail') }}" class="btn btn-primary">En profiter</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}