{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .register-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .form-title {
        color: white;
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 10px;
        padding-left: 2.5rem;
        height: 3rem;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        color: white;
        box-shadow: none;
    }

    .form-label {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0.5rem;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 2.3rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .btn-register {
        width: 100%;
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-register:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .login-link {
        text-align: center;
        margin-top: 1rem;
    }

    .login-link a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .login-link a:hover {
        color: white;
    }

    .terms-checkbox {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .terms-checkbox input[type="checkbox"] {
        width: 1.2rem;
        height: 1.2rem;
    }

    .terms-checkbox label {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
    }

    .alert {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 10px;
        margin-bottom: 1rem;
    }

    .error-message {
        color: #ff4444;
        font-size: 0.9rem;
        margin-top: 0.3rem;
    }
</style>

<div class="video-background">
    <iframe 
        src="https://youtube.com/embed/9OhgHSFAnRM?autoplay=1&mute=1&loop=1&controls=0&showinfo=0&rel=0&playlist=9OhgHSFAnRM&modestbranding=1" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        frameborder="0" 
        allowfullscreen
    ></iframe>
</div>

<div class="container">
    <div class="register-container">
        <h1 class="form-title">Inscription</h1>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label'}}) }}
                <i class="fas fa-user input-icon"></i>
                {{ form_widget(registrationForm.pseudo) }}
                <div class="error-message">{{ form_errors(registrationForm.pseudo) }}</div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                <i class="fas fa-envelope input-icon"></i>
                {{ form_widget(registrationForm.email) }}
                <div class="error-message">{{ form_errors(registrationForm.email) }}</div>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                <i class="fas fa-lock input-icon"></i>
                {{ form_widget(registrationForm.plainPassword) }}
                <div class="error-message">{{ form_errors(registrationForm.plainPassword) }}</div>
            </div>

            <div class="terms-checkbox">
                {{ form_widget(registrationForm.agreeTerms) }}
                <label for="{{ registrationForm.agreeTerms.vars.id }}">
                    J'accepte les <a href="#" style="color: #00ffff;">conditions d'utilisation</a>
                </label>
                <div class="error-message">{{ form_errors(registrationForm.agreeTerms) }}</div>
            </div>

            <button type="submit" class="btn btn-register">
                <i class="fas fa-sign-in-alt me-2"></i>S'inscrire
            </button>
        {{ form_end(registrationForm) }}

        <div class="login-link">
            <a href="{{ path('app_login') }}">
                <i class="fas fa-arrow-left me-1"></i>
                Déjà un compte ? Connectez-vous
            </a>
        </div>
    </div>
</div>
{% endblock %}
